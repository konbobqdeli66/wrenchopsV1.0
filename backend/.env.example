# Copy to backend/.env on the server (do NOT commit backend/.env)

# Server
NODE_ENV=production
PORT=5000

# Security (required in production)
JWT_SECRET=change_me_to_a_long_random_string

# Optional: bootstrap an initial admin if DB has no admins
BOOTSTRAP_ADMIN_NICKNAME=admin
BOOTSTRAP_ADMIN_PASSWORD=admin

# SMTP (optional but recommended for invitations/password reset/invoice emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

